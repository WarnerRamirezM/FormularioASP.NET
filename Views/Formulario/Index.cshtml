@using WebApplication1.Models.ApiModels
@model IEnumerable<WebApplication1.Models.Formulario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<!-- Tabla principal con Bootstrap -->
<table class="table table-striped table-bordered" style="width: 100%;">
    <thead class="thead-dark">
    
        <tr>
            <!-- Aquí puedes poner directamente el nombre amigable -->
            <th>Identificación</th>
            <th>Nombre</th>
            <th>Primer Apellido</th>
            <th>Segundo Apellido</th>
            <th>Nacionalidad</th>
            
            <th>Teléfono Principal</th>
            <th>Correo Electrónico</th>
            <th>Nombre Carrera</th>
            
    </thead>
    <tbody>
        @foreach (var item in Model)

        {

            <tr>
                <td>@Html.DisplayFor(modelItem => item.Identificacion)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.PrimerApellido)</td>
                <td>@Html.DisplayFor(modelItem => item.SegundoApellido)</td>
                <td>@Html.DisplayFor(modelItem => item.Nacionalidad)</td>
                
                <td>@Html.DisplayFor(modelItem => item.TelefonoPrincipal)</td>
                <td>@Html.DisplayFor(modelItem => item.CorreoElectronico)</td>
                <td>@Html.DisplayFor(modelItem => item.NombreCarrera)</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.FormularioId">Edit</a> |
                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.FormularioId">Details</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.FormularioId">Delete</a>
                    <!-- Botón para descargar PDF -->
                    <a class="btn btn-secondary btn-sm" asp-action="DescargarPDF" asp-route-id="@item.FormularioId">Download PDF</a>
                </td>
            </tr>
        }
           
  
    </tbody>
</table>
<!-- Paginación -->
<nav aria-label="Paginación">
    <ul class="pagination justify-content-center">
        @if (ViewBag.PaginaActual > 1)
        {
            <!-- Enlace para la página anterior -->
            <li class="page-item">
                <a class="page-link" href="?page=@(ViewBag.PaginaActual - 1)">« Anterior</a>
            </li>
        }

        @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
        {
            <!-- Enlaces a las páginas numeradas -->
            <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                <a class="page-link" href="?page=@i">@i</a>
            </li>
        }

        @if (ViewBag.PaginaActual < ViewBag.TotalPaginas)
        {
            <!-- Enlace para la página siguiente -->
            <li class="page-item">
                <a class="page-link" href="?page=@(ViewBag.PaginaActual + 1)">Siguiente »</a>
            </li>
        }
    </ul>
</nav>
